
.item {
    margin: 10rpx 30rpx 10rpx 30rpx;
    display: block;
  }
  
  .item_line_one {
    height: 60rpx;
    justify-content: flex-start;
    display: flex;
    align-items: center;
  }
  
  .line_one_name {
    font-weight: 400;
    font-size: 30rpx;
  }
  
  .item_line_two {
    height: 50rpx;
    display: flex;
    align-items: center;
  }
  
  .line_one_content {
    font-size: 30rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    font-weight: 200;
    display: -webkit-box !important;
    word-break: break-all;
    -webkit-box-orient: vertical;
    -webkit-line-clamp:1;
    margin-right: 20rpx;
  }
  
  .item_line_three {
    width: 100%;
    height: 60rpx;
    justify-content: space-between;
    display: flex;
    align-items: center;
  }
  
  .line {
    height: 2rpx;
    margin: 0rpx 28rpx;
    background: #d6d6d6;
  }